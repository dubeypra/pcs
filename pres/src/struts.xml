<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<package name="default" extends="struts-default">

		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		<action name="*Link" method="{1}" class="com.vaannila.action.LinkAction">
			<result name="welcome" type="tiles">welcome</result>
			<result name="friends" type="tiles">friends</result>
			<result name="office" type="tiles">office</result>
		</action>
		
		<action name="LoginAction" class="pcs.pradeep.dubey.com.ui.dashboard.LoginAction">
			<result type="redirectAction">DashboardAction</result>
			<result name="failure">/jsp/dashboard/Cancel.jsp</result>
		</action>
		
		<action name="EmployeeCreateForm" class ="pcs.pradeep.dubey.com.ui.employee.EmployeeCreateAction" method="createEmployeeForm">
			<result name="employeeCreate"  type="tiles">employeeCreate</result>
			<result name="input" type="tiles">employeeCreate</result>
			<result name="failure">/jsp/dashboard/Failure.jsp</result>
		</action>
		
		<action name="EmployeeCreate" class = "pcs.pradeep.dubey.com.ui.employee.EmployeeCreateAction">
			<result name="employeeDashboard" type="redirectAction">EmployeeDashBoard</result>
			<result name="input" type="tiles">employeeCreate</result>
			<result name="failure">/jsp/dashboard/Failure.jsp</result>
		</action>
		
		<action name="EmployeeUpdateForm" class ="pcs.pradeep.dubey.com.ui.employee.EmployeeUpdateAction" method="createEmployeeUpdateForm">
			<result name="employeeUpdate"  type="tiles">employeeUpdate</result>
			<result name="input" type="tiles">employeeUpdate</result>
			<result name="failure">/jsp/dashboard/Failure.jsp</result>
		</action>
		
		<action name="EmployeeUpdateFormfetchDetails" class ="pcs.pradeep.dubey.com.ui.employee.EmployeeUpdateAction" method="fetchDetails">
			<result name="fetchDetails"  type="tiles">employeeUpdate</result>
			<result name="input" type="tiles">employeeUpdate</result>
			<result name="failure">/jsp/dashboard/Failure.jsp</result>
		</action>
		
		<action name="EmployeeUpdate" class = "pcs.pradeep.dubey.com.ui.employee.EmployeeUpdateAction">
			<result name="employeeDashboard" type="redirectAction">EmployeeDashBoard</result>
			<result name="input" type="tiles">employeeUpdate</result>
			<result name="failure">/jsp/dashboard/Failure.jsp</result>
		</action>
		
		<action name="EmployeeDashBoard" class="pcs.pradeep.dubey.com.ui.employee.EmployeeDashBoardAction" method="populateDashBoard">
			<result name="employeeDashboard" type="tiles">employeeDashboard</result>
			<result name="failure">/jsp/dashboard/Failure.jsp</result>
		</action>
		
		
		<action name="CustomerAction" class="pcs.pradeep.dubey.com.ui.customer.CustomerAction">
			<result name="success">/jsp/customer/CustomerDashboard.jsp</result>
			<result name="failure">/jsp/dashboard/Failure.jsp</result>
		</action>
		
		<action name="ProjectAction" class="pcs.pradeep.dubey.com.ui.project.ProjectAction">
			<result name="success">/jsp/project/ProjectDashboard.jsp</result>
			<result name="failure">/jsp/dashboard/Failure.jsp</result>
		</action>
		
		<action name="DashboardAction" class="pcs.pradeep.dubey.com.ui.dashboard.DashboardAction">
			<result name="success" type="redirectAction">EmployeeDashBoard</result> <!--  Which ever action has to made default must be mapped here -->
		</action>
		
		<action name="*SideMenu"  method="{1}" class="pcs.pradeep.dubey.com.ui.dashboard.TopMenuBarAction">
			<result name="employeeSideMenu" type="redirectAction">EmployeeDashBoard</result>
			<result name="customerSideMenu" type="tiles">customerSideMenu</result>
			<result name="adminSideMenu" type="tiles">adminSideMenu</result>
			<result name="projectSideMenu" type="tiles">projectSideMenu</result>
			<result name="helpSideMenu" type="tiles">helpSideMenu</result>
		</action>
	</package>
	
</struts>