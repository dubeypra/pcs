<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
    "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<field name="firstName">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message key="First Name is mandatory" />
		</field-validator>
	</field>

	<field name="lastName">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message key="Last Name is mandatory" />
		</field-validator>
	</field>

	<field name="dob">
		<field-validator type="date">
			<param name="min">01/01/1960</param>
			<param name="max">01/01/1997</param>
			<message key=" Date of Birth must be within ${min} and ${max}" />
		</field-validator>
	</field>

	<field name="primaryAddress">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message key="Address required for creation of Employee" />
		</field-validator>
	</field>

	<field name="city">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message key="Address required for creation of Employee" />
		</field-validator>
	</field>

	<field name="doj">
		<field-validator type="date">
			<message key=" Date of Joining should be in valid date format" />
		</field-validator>
	</field>

	<field name="email">
		<field-validator type="requiredstring">
			<message key="Email is Mandatory field " />
		</field-validator>
		<field-validator type="email">
			<message key="provided email is not in valid format" />
		</field-validator>
	</field>
	<field name="mobileNo">
		<field-validator type="requiredstring">
			<message key="Mobile No is mandatory field" />
		</field-validator>
	</field>
</validators>


